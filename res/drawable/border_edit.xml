<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true"><shape>
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />

            <solid android:color="#fff" />

            <stroke android:width="3dp" android:color="#c0c0c0" />
        </shape></item>
    <item android:state_window_focused="false"><shape>
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />

            <solid android:color="#fff" />

            <stroke android:width="1dp" android:color="#BDC7D8" />
        </shape></item>

</selector>